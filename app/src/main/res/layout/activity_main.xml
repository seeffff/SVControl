<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/colorLightestBlueGrey"
    tools:context="com.newwesterndev.svcontrol.MainActivity">

    <LinearLayout
        style="@style/MainLinear">

        <TextView
            style="@style/MainText"
            android:text="@string/ui_speed_text" />

        <TextView
            android:id="@+id/low_mph_text"
            style="@style/MainText" />
    </LinearLayout>

    <SeekBar
        android:id="@+id/low_mph_seek"
        style="@style/MainSeek" />

    <LinearLayout
        style="@style/MainLinear">

        <TextView
            style="@style/MainText"
            android:text="@string/ui_volume_text" />

        <TextView
            android:id="@+id/low_volume_text"
            style="@style/MainText"/>
    </LinearLayout>

    <SeekBar
        android:id="@+id/low_volume_seek"
        style="@style/MainSeek" />

    <Button
        android:id="@+id/start_button"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="60dp"
        android:textColor="@color/colorWhite"
        android:background="@color/colorPrimary"
        android:text="@string/start_button" />

</LinearLayout>
